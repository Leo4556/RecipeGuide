<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Основные параметры для светлой темы -->
        <item name="android:colorPrimary">@color/main_light_theam</item>
        <item name="android:colorPrimaryDark">@color/main_light_theam2</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_time</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:color">@color/main_light_theam</item>
        <item name="editTextTint">@color/black</item>
        <item name="buttonHomeIcon">@drawable/button_home</item>
        <item name="buttonPlusIcon">@drawable/button_plus</item>
        <item name="buttonHeartIcon">@drawable/button_heart</item>
        <item name="buttonGearIcon">@drawable/button_gear</item>
        <item name="buttonSearchBarIcon">@drawable/button_search_bar</item>
        <item name="buttonBackIcon">@drawable/button_back_arrow</item>
        <item name="buttonShareIcon">@drawable/button_share</item>
        <item name="buttonAccountIcon">@drawable/account</item>
        <item name="buttonLanguageIcon">@drawable/language</item>
        <item name="buttonStyle">@style/CustomButton</item>
        <item name="colorDivider">@color/black</item>
    </style>
    <!-- Base application theme. -->

    <style name="CustomButton">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/rounded_button_fragment</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProfileButton">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkerColor">
        <item name="android:textColor">@color/text_time</item>
    </style>
    <style name="DarkerColor.CustomEditText">
        <item name="android:background">@color/background_add_screen</item>
    </style>
</resources>